<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="198dp"
            android:layout_margin="5dp"
            android:src="@drawable/jong"
            android:id="@+id/promiss"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gong"
                android:text="  정후보  "
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="      이름    :   "
                android:textSize="23dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/candi1_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="은종민"
                android:textSize="23dp"
                android:layout_marginBottom="2dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="      학과    :  "
                android:textSize="23dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/textView" />

            <TextView
                android:id="@+id/candi1_department"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="컴퓨터공학과"
                android:textSize="23dp"
                android:layout_marginBottom="2dp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="   경력사항 :  "
                android:textSize="23dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/candi1_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="블라블라"
                android:textSize="23dp"
                android:layout_marginBottom="2dp"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gong2"
                android:text="  부후보  "
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:id="@+id/textView2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="      이름    :   "
                android:textSize="23dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/candi2_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="박수경"
                android:textSize="23dp"
                android:layout_marginBottom="2dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="      학과    :  "
                android:textSize="23dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/textView3" />

            <TextView
                android:id="@+id/candi2_department"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="컴퓨터공학과"
                android:textSize="23dp"
                android:layout_marginBottom="2dp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="   경력사항 :  "
                android:textSize="23dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/candi2_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="블블라블블라"
                android:textSize="23dp"
                android:layout_marginBottom="2dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gong3"
                android:text="  핵심 공약사항  "
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" 1. 청소를 잘하겠습니다. "
                android:textSize="23dp"
                android:id="@+id/promi"
                android:layout_marginBottom="2dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp">

        </LinearLayout>


    </LinearLayout>
</ScrollView>

